<div class="mb-5 pt-3">
    <h2 class="title pb-4 ms-3">Your Posts</h2><hr>
</div>

{{#if posts.length}}
    {{#each posts as |post|}}
        {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}"><button class="button mb-5 ms-2 mt-2 is-warning rounded shadow btn-warning">Edit Post</button></a>
    {{/each}}
{{else}}
    <h6 class="pb-4 has-text-centered is-italic">You do not currently have any posts.</h6>
{{/if}}

<a href="/dashboard/create/"><button id="create-post">Create Post</button></a>