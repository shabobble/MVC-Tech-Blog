<div class="column">
<h2 class="title pb-4 ms-2 mt-4">Login</h2><hr>
<form class="login-form">
  <div class="card text-white bg-success mb-3 ms-2" style="max-width: 18rem;">
    <label for="email-login">Email:</label>
    <input type="text" id="email-login" />
  </div>
  <div class="card text-white bg-success mb-3 ms-2" style="max-width: 18rem;">
    <label for="password-login">Password:</label>
    <input type="password" id="password-login" />
  </div>
  <div>
    <button type="submit" class="btn-success ms-2 p-1 rounded" style="width: 100px;">Login</button><br>
    <h6 class="mt-2 ms-2 text-danger">Not registered? Click the link below!</h6>
    <a href="/signup"><button type="button" class="btn-primary ms-2 p-1 rounded" style="width: 100px;">Signup</button></a>
  </div>
</form>
</div>

<!-- javascript file-->
<script src="/js/login.js"></script>